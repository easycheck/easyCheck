<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easycheck"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Maps metadata and permissions -->
    <permission
        android:name="com.example.easycheck.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.easycheck.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- Access Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDO6usB34yl1MZl24VuNkBX4PNmAvHv8fU" />

        <!-- FirstActivity -->
        <activity
            android:name="com.example.easycheck.FirstActivity"
            android:label="@string/title_activity_first" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BusinessListActivity -->
        <activity
            android:name="com.example.easycheck.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <!-- SinglePlaceActivity -->
        <activity
            android:name="com.example.easycheck.SinglePlaceActivity"
            android:label="@string/title_activity_single_place" >
        </activity>

        <!-- PlacesMapActivity -->
        <activity
            android:name="com.example.easycheck.PlacesMapActivity"
            android:label="@string/title_activity_places_map" >
        </activity>

        <!-- SettingsActivity -->
        <activity
            android:name="com.example.easycheck.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pruebasettings.SettingsActivity" />
        </activity>
        <activity
            android:name="com.example.easycheck.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.easycheck.StatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName="com.example.easycheck.FirstActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.easycheck.FirstActivity" />
        </activity>
    </application>

</manifest>